<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <title>Test GetUserBookings API</title>
  </head>
  <body>
    <h1>Test GetUserBookings API</h1>

    <form id="getUserBookingsForm">
      <input name="userId" value="userId" />
      <button type="submit">Get User Bookings</button>
    </form>

    <script>
      document
        .getElementById("getUserBookingsForm")
        ?.addEventListener("submit", async (e) => {
          e.preventDefault();

          const form = e.target as HTMLFormElement;
          if (!form) {
            alert("Form not found.");
            return;
          }
          const userId =
            (form.elements.namedItem("userId") as HTMLInputElement)?.value.trim() || "";

          if (!userId) {
            alert("Please enter a userId");
            return;
          }

          const res = await fetch(`/api/bookings/GetUserBookings?userId=${userId}`);
          const data = await res.json();

          alert(JSON.stringify(data, null, 2));
        });
    </script>
  </body>
</html>
