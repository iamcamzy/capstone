---
import ThemeButton from './ThemeButton.astro';
const user = true;
---

<div
  id="navbar"
  class="sticky top-0 grid grid-cols-12 h-[7em] w-full bg-white overflow-hidden items-center"
>
  <!-- Company logo -->
  <div
    id="company"
    class="col-start-2 col-end-5 flex justify-start items-center"
  >
    <a href="#top">
      <img src="/LightModeLogo.png" alt="company logo" class="pl-15" />
    </a>
    <span class="border-r-2 border-r-gray-600 h-[80%] ml-5"></span>
  </div>

  <!-- Navigation -->
  <div id="navigation" class="col-start-5 col-end-10 grid grid-cols-6 h-full">
    <span
      class="flex justify-center items-center hover:border-b-2 hover:inset-shadow-sm/10"
    >
      <a
        href="/#hero"
        class="flex justify-center items-center text-[1.5rem] w-full h-full hover:scale-110 transition-transform ease-in-out duration-300 px-5"
        >HOME</a
      >
    </span>
    <span
      class="flex justify-center items-center hover:border-b-2 hover:inset-shadow-sm/10"
    >
      <a
        href="#venue"
        class="flex justify-center items-center text-[1.25rem] w-full h-full hover:scale-110 transition-transform ease-in-out duration-300 px-5"
        >VENUE</a
      >
    </span>
    <span
      class="flex justify-center items-center hover:border-b-2 hover:inset-shadow-sm/10"
    >
      <a
        href="#about-us"
        class="flex justify-center items-center text-[1.25rem] w-full h-full hover:scale-110 transition-transform ease-in-out duration-300 px-5"
        >ABOUT</a
      >
    </span>
    <span
      class="flex justify-center items-center hover:border-b-2 hover:inset-shadow-sm/10"
    >
      <a
        href="/booking"
        class="flex justify-center items-center text-[1.25rem] w-full h-full hover:scale-110 transition-transform ease-in-out duration-300 px-5"
        >BOOKING</a
      >
    </span>
    <span
      class="flex justify-center items-center hover:border-b-2 hover:inset-shadow-sm/10"
    >
      <a
        href="#find-us"
        class="flex justify-center items-center text-[1.25rem] w-full h-full hover:scale-110 transition-transform ease-in-out duration-300 px-5"
        >FIND US</a
      >
    </span>
    <span
      class="flex justify-center items-center hover:border-b-2 hover:inset-shadow-sm/10"
      ><a
        href="#contact-us"
        class="flex justify-center items-center text-[1.25rem] w-full h-full hover:scale-110 transition-transform ease-in-out duration-300 px-5"
        >CONTACT</a
      ></span
    >
  </div>

  <!-- User buttons -->
  <div id="user" class="col-start-10 col-end-11 ml-10">
    <div class="flex items-center gap-5 pl-10">
      <span class="w-[400px]"
        ><a
          href="/signUp"
          class="px-2 py-1 flex justify-center items-center bg-[#8a31ff] rounded-2xl text-white outline-2 outline-transparent hover:cursor-pointer hover:text-black hover:outline-black hover:bg-[#b176ff]"
        >
          SIGN UP
        </a></span
      >

      <a
        href="/signIn"
        class="px-2 py-1 flex justify-center items-center bg-[#8a31ff] rounded-2xl text-white outline-2 outline-transparent hover:cursor-pointer hover:text-black hover:outline-black hover:bg-[#7811ff]"
      >
        LOG IN
      </a>
      <ThemeButton class="" />
    </div>
  </div>
</div>
