<footer class="w-full h-[10rem] pt-10 pb-8 bg-black">
  <div class="w-full h-full row-start-0 row-end-1 grid grid-cols-12">
    <div class="col-start-3 col-end-5 grid grid-cols-2 grid-rows-2">
      <div class="col-start-1 col-end-2 row-start-1 row-end-2 grid grid-rows-2">
        <span class="text-[1.5rem] font-bold">Baka Kami Na To</span>
        <span class="text-[0.90rem] font-semibold"
          >Follow our socials below:</span
        >
      </div>
      <div class="col-start-2 col-end-3 row-start-1 row-end-2 grid grid-rows-2">
        <span class="row-start-2 row-end-3"> address: </span>
      </div>
      <div
        class="col-start-1 col-end-3 row-start-2 row-end-3 grid grid-cols-5 gap-4 mt-4"
      >
        <!-- FACEBOOK -->
        <a
          href="#"
          target="_blank"
          class="relative inline-block w-[25px] h-[25px] group"
        >
          <!-- Normal image -->
          <img
            src="/socials_images/facebook/fb_photo_black.png"
            alt="Facebook Icon"
            class="absolute inset-0 w-full h-full object-contain opacity-100 group-hover:opacity-0 transition-opacity duration-300"
          />
          <!-- Hover image -->
          <img
            src="/socials_images/facebook/fb_photo_colored.png"
            alt="Facebook Icon"
            class="absolute inset-0 w-full h-full object-contain opacity-0 group-hover:opacity-100 transition-opacity duration-300"
          />
        </a>
        <!-- X -->
